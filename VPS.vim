set encoding=utf-8 " 设置文件编码
set autoindent		" 自动对齐
set cindent			" 自动缩进
set incsearch		"
set hlsearch " 高亮搜索结果
set tabstop=4 		" tab键宽度
set expandtab 		" 设置tab转四个空格
set shiftwidth=4    " 设置缩进宽度
set showmatch
set history=1000
set ruler " 显示底部行号
set showcmd " 显示底部命令
syntax on			" 语法高亮
set number			" 显示行号
set cursorline      " 高亮当前行
set relativenumber  " 相对行号
set laststatus=2
filetype plugin indent on " 文件类型自动检测
noremap q <Nop>
